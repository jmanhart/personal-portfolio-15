@import 'rupture'
@import 'nib'
@import 'jeet'
@import '../styles/vars.styl'



//Bars
.top, .bottom, .left, .right {
  position: fixed;
  z-index: 1;
  }
  .left, .right {
    top: 0; bottom: 0;
    width: 15px;
    }
    .left {
      left: 0;
    }
    .right {
      right: 0;
    }

  .top, .bottom {
    left: 0; right: 0;
    height: 15px;
    }
    .top {
      top: 0;
    }
    .bottom {
      bottom: 0;
      }

.top, .bottom, .left, .right
  +below(600px)
    visibility hidden
