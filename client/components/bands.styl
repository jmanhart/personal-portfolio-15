@import 'rupture'
@import 'nib'
@import 'jeet'
@import '../styles/vars.styl'

#home-bands
  width: 100%
  .bands
    width: 600px
    max-width: 600px
    height: 40%
    padding: 0% 15% 0% 15%
    .column
      height: 100%
      display: flex;
      align-items: center;
      img
        width: 100%
    .copy-side //Copy and button side styles
      display: flex
      height: 50%
      flex-wrap: wrap
      align-items: center
      margin-top: 9%
      +below($phablet)
        justify-content: center
        margin-top: 3%
      h3
        padding-bottom: 5px
        margin-top: 0px
      h4
        padding-bottom: 15px
        margin-top: 0px
        +below($phablet)
          text-align: center;
