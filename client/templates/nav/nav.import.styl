@import 'nib'
@import 'rupture'

.nav-top
  width 960px
  margin 0 auto
  +below(960px)
    width 85%

header
  width 100%
  height 150px
  overflow hidden
  position fixed
  top 0
  left 0
  z-index 999
  box-shadow 0 2px 20px rgba(0,0,0,0.125)
  background rgba(255,255,255,.95)
  -webkit-transition height 0.3s
  -moz-transition height 0.3s
  -ms-transition height 0.3s
  -o-transition height 0.3s
  transition height 0.3s

header h1#logo
  display inline-block
  height 150px
  line-height 150px
  float left
  -webkit-transition all 0.3s
  -moz-transition all 0.3s
  -ms-transition all 0.3s
  -o-transition all 0.3s
  transition all 0.3s
  visibility visible

header nav
  display inline-block
  float right

header nav a
  line-height 150px
  margin-left 20px
  text-transform uppercase
  color #000
  font-size 18px
  font-family 'Lato', sans-serif
  font-weight 400
  text-decoration none
  transition all 0.3s

header nav a:hover
  color grey

header.smaller
  height 65px




header.smaller h1#logo
  width 150px
  height 75px
  line-height 70px
  font-size 30px
  visibility visible

header.smaller nav a
  line-height 75px
  font-size 15px


@media all and (max-width: 660px)
  header h1#logo
      display block
      float none
      margin 0 auto
      height 100px
      line-height 100px
      text-align center

  header nav
      display block
      float none
      height 50px
      text-align center
      margin 0 auto

  header nav a
      line-height 50px
      margin 0 10px

  header.smaller
      height 75px

  header.smaller h1#logo
      height 40px
      line-height 40px
      font-size 30px

  header.smaller nav
      height 35px

  header.smaller nav a
      line-height 35px
