@import 'nib'
@import 'rupture'


.AboutIntroWrapper
  height 250px
  width 75%
  margin 0 auto
  display: flex;
  justify-content flex-end
  align-items: center;
  flex-wrap wrap
  flex-direction column
  padding-bottom 15px
  +below(600px)
    height 250px
    width 95%
  .AboutIntro
    padding-left 15px
    padding-right 15px
    max-width 600px
    padding-bottom 1%
  
.IntroImage
  width 45%
  margin 0 auto  

#IntroImageScreenClip 
  clip-path circle(40% at 50% 50%);
  display flex
  justify-content center
  
  
.IntroText
  text-decoration none
  color #222
  &:hover
    text-decoration underline
    color grey


////////////////////////////////////////////////////
// ABOUT

.AboutWrapper
  height auto
  width 100%
  display: flex;
  justify-content flex-start
  align-items: center;
  flex-wrap wrap
  flex-direction column



#AboutDetails
  .Band-Left
    width 50%
    height 100%
    align-items flex-start
    h3
      color #000000
      padding-top 2% 
      padding-bottom 2%
      text-align center
      +below(600px)
        text-align left
         
  .Band-Right
    height 100%
    padding-top 3px
    padding-bottom 20px
    //padding 2% 1% 0% 1%
    align-items flex-start
    justify-content flex-start
    flex-wrap nowrap
    h4
      text-align left
      font-size 28px
      line-height 34px
      padding-bottom 3%
      max-width 500px
      width 100%
    ul 
      padding 0%
      padding-bottom 3%
      li 
        padding-top 5%
      li:last-child
        padding-bottom 8%
    p
      color #000000
      padding-bottom 2%
      padding-left 3%
      max-width 450px
      

.Abouttitle
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 20px
  //line-height 40px
  color black
  font-style normal
  text-align left
  padding-bottom 3px
  text-decoration none
  h3
    padding 2%
  

#AboutExit
  flex-direction row
  +below(600px)
    width 95%
  .BandSingle
    width 100%
    height 100%
    padding-bottom 5%
    padding-top 3%
    align-items center
    justify-content flex-start
    +below(600px)
      width 95%
      //padding-top 30%
    h3
      color #000000
      padding-top 2% 
      width 100%
      text-align center
    
#logosall
  height 100%