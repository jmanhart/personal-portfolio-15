@import 'rupture'
@import 'nib'
@import 'jeet'


.Grid
  width 75%
  height 250px
  margin 0 auto
  padding-bottom 15px
  padding-top 2%
  border-radius: 4px
  display flex
  flex-wrap wrap
  +below(960px)
    width 80%
  cf()
  .GridItem
      col(1/3, gutter: 2, cycle: 3)
      display: flex;
      align-items: flex-end;
      justify-content: center; 
      height 100%
      box-sizing border-box
      box-shadow: 0px 1px 1px 0px #dfdfdf;
      background-color #fffffff
      border-radius: 4px;
      margin-bottom 2%
      .GridLogo
        display flex
        justify-content: center;
        #BushsGridLogo
          width 45%
          height 45%
          padding-bottom 7%
        #SBXGridLogo
          width 35%
          height 35%
          padding-bottom 4%
        #HellmGridLogo
          width 55%
          height 55%
          padding-bottom 7%
      .GridLabel
          padding-bottom 10%
      
      a 
        text-decoration none
      +below(768px)
          col(1/2, gutter: 2, cycle: 2)
      +below(400px)
          col(1/1, gutter: 2, cycle: 1)
 















