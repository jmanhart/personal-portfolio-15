@import 'rupture'
@import 'nib'
@import 'jeet'


.Grid
  width 960px
  height 250px
  margin 0 auto
  padding-bottom 15px
  padding-top 2%
  border-radius: 4px
  +below(960px)
    width 85%
  cf()
  .GridItem
      col(1/3, gutter: 2, cycle: 3)
      height 100%
      box-sizing border-box
      box-shadow: 0px 1px 1px 0px #dfdfdf;
      background-color #ffffff
      border-radius: 4px;
      overflow: hidden;
      position relative
      padding 4%
      margin-bottom 2%
      p, h1, h2, h3, h4
        text-align center
      a 
        text-decoration none
      +below(768px)
          col(1/2, gutter: 2, cycle: 2)
      +below(400px)
          col(1/1, gutter: 2, cycle: 1)
  .GridItem:hover
      background grey
      border 0px solid rgba(0, 0, 0, 0.2)
      p, h1, h2, h3, h4
        color white
      a 
        text-decoration none
      












