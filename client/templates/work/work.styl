// Blog STYLES
 
.blog-posts
  width 100%
  .post
    width 75%
    height  100%
    margin 0 auto
    padding 3% 3% 6% 3%
    box-sizing border-box
    // box-shadow: 0px 1px 1px 0px #dfdfdf;
    // background-color #ffffff
    // border-radius: 9px;
    img
      max-width 100%
      height auto
    +below(768px)
      width 100% 
      
     
.post-wrapper
  padding 20px 0px 20px 0px
  height 100% 
  
  

.post-info-wrapper
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap 
  
.date
  color black
  font-family helvetica
  font-size 14px
   

.tag-wrapper 
  height 100%
  width 70%
  text-align right
  line-height 28px
  

.tags
  font-size 14px
  color black
  font-family helvetica
  padding 1% 1% 1% 2%
  text-align right
  box-shadow: 0px 1px 1px 0px #dfdfdf;
  background-color #ffffff
  border-radius 6px
  margin-left 1%
  
