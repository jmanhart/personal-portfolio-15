@import 'nib'
@import 'rupture'

// MAIN NAV

.nav-top
  width 960px
  margin 0 auto
  +below(960px)
    width 85%

.ProjNav
  width 100%
  height 100px
  // overflow hidden
  margin-top  -960px
  position fixed
  // top 0
  left 0
  z-index -1
  -webkit-transition height 0.3s
  -moz-transition height 0.3s
  -ms-transition height 0.3s
  -o-transition height 0.3s
  transition height 0.3s

.ProjNav h1#logo
  display inline-block
  height 90px
  line-height 90px
  float left
  -webkit-transition all 0.3s
  -moz-transition all 0.3s
  -ms-transition all 0.3s
  -o-transition all 0.3s
  transition all 0.3s
  visibility visible

.ProjNav nav
  display inline-block
  float right

.ProjNav nav a
  line-height 110px
  margin-left 20px
  text-transform uppercase
  color #000
  font-size 18px
  font-family 'Lato', sans-serif
  font-weight 400
  text-decoration none
  transition all 0.3s

.ProjNav nav a:hover
  color grey


@media all and (max-width: 660px)
  .ProjNav h1#logo
      display block
      float none
      margin 0 auto
      height 100px
      line-height 100px
      text-align center

  .ProjNav nav
      display block
      float none
      height 50px
      text-align center
      margin 0 auto

  .ProjNav nav a
      line-height 50px
      margin 0 10px

.LogoWrap
	height 100%
	width 100%
	display flex
	justify-content center
	
