// Work Grid 1/3
.Design
  cf()
  .DesignWrapper
      col(1/3, gutter: .5)
      height 200px
      box-sizing border-box
      border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      .DesignBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        a
          color black
          font-family helvetica
          text-align center
          text-decoration none

  .DesignWrapper:hover
    background grey
    border 0px solid rgba(0, 0, 0, 0.2)
    p
      color white
