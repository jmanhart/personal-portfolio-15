// Work Grid 1/3
.Design
  cf()
  .DesignWrapper
      col(1/2, gutter: 2, cycle: 2)
      height 300px
      box-sizing border-box
      box-shadow: 0px 1px 1px 0px #dfdfdf;
      background-color #ffffff
      border-radius: 4px;
      overflow: hidden;
      // border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      +below(768px)
          col(1/1, gutter: .5, cycle: 2)
      
      .DesignBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        p
          color black
          font-family helvetica
          text-align center
          text-decoration none

  .DesignWrapper:hover
      background grey
      border 0px solid rgba(0, 0, 0, 0.2)
      p
        color white