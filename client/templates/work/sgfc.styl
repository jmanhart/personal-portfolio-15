@import 'nib'
@import 'rupture'
@import 'jeet'
@import '/../../vars.styl'

edit()
.container
  width: 960px
  height: 100%
  +below($desktop)
    padding: 0% 4% 0% 4%

.wrapper
  width: 100%
  height: 100%
  display: flex
  justify-content: center

.grid
  cf()
  padding: 1% 0% 1% 0%
  .column-single
    col(1/1, cycle: 1)
    height: 100px
    background-color: $blue
  .column-halfs
    col(1/2, cycle: 2)
    height: 100px
    background-color: $green
    +below($phablet)
      col(1/1)
  .column-thirds
    col(1/3, cycle: 3)
    height: 100px
    background-color: $red
    +below($phablet)
      col(1/1, cycle: 1)
  .column-quarter
    col(1/4, cycle: 4)
    height: 100px
    background-color: $gold
    +below($tablet)
      col(1/2, cycle: 2)
    +below($phablet)
      col(1/1, cycle: 1)
  .column-fifths
    col(1/5, cycle: 5)
    height: 100px
    background-color: $white
    +below($phablet)
      col(1/1, cycle: 1)
  .column-sixths
    col(1/6, cycle: 6)
    height: 100px
    background-color: $black
    +below($tablet)
      col(1/3, cycle: 3)
    +below($phablet)
      col(1/1, cycle: 1)




