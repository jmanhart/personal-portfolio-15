@import 'rupture'
@import 'nib'
@import 'jeet'
@import '../../styles/vars.styl'
@import '../../styles/grid.styl'

// edit()

#about-subnav
  margin-top: 45px
  padding: 0px 130px 0px 130px
  width: 100%

#about
  margin-top: 50px
  min-height: 650px
  padding: 0px 130px 0px 130px
  +below(600px)
    padding: 0% 5% 0% 5%
  .grid
    margin-bottom: 1%
    max-width: 770px
  img
    width: 100%
  .intro
    font-size: 140%
    padding-bottom: 4%
  hr
    max-width: 80%
  h3
    text-transform: uppercase;
    font-size: 100%
    text-align: left
    margin-bottom: 1%
    +below($tablet)
      text-align: left
  h2
    font-size: 175%
    line-height: 135%
    max-width: 75%
    +below($tablet)
      max-width: 100%
  p
    text-align: left;
    max-width: 65%
    +below($tablet)
      max-width: 100%
  .label
    font-size: 110%
    margin-bottom: 6%


.cap-icon
  transition .25s ease-out all
  &:hover
    transform scale(1.10)

#opacity-50
  color: rgba(0,0,0,0.5);

#icon-grid
  max-width: 500px
  +below($phablet)
    max-width: 100%
