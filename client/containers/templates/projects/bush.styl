@import 'rupture'
@import 'nib'
@import 'jeet'
@import '../../../styles/vars.styl'
@import '../../../styles/grid.styl'

#bush-logo
  height: 15vh
  width: auto
  margin-top: -65px;
  margin-bottom: 0px;
  margin-left: auto;
  margin-right: auto;
  justify-content: center;
  display: flex

#bush-main
  height: 100%
  max-height: 525px
  width: 100%
  padding-top: 5%
  z-index: 1000
  background-image: -webkit-radial-gradient(center, #3b3ebb, #0b0d58);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  img
    width: 75%
    max-width: 900px
    // padding: 4% 4% 0% 4%
    +below($phablet)
      width: 95%
      padding: 3% 0% 0% 0%

#bush-intro
  h2
    font-size: 3vmin
    margin: 0 auto;
    position: relative;
    margin-bottom: 4%


#bush-content
  .grid
    .column
      display: flex
      justify-content: center;
      img
        width: 95%
        height: 95%
