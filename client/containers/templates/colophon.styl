@import 'rupture'
@import 'nib'
@import 'jeet'
@import '../../styles/vars.styl'


//FPO Styles for the time being
.grid-fpo
  cf()
  padding: 1% 0% 1% 0%
  .column
    width: 100%
    height: 150px
    margin-bottom: 1%
    background-color: $gray
    +below($tablet)
      margin-bottom: 2%
  .single
    col(1/1, cycle: 1)
  .halfs
    col(1/2, cycle: 2)
    height:150px
    +below($phablet)
      col(1/1)
  .thirds
    col(1/3, cycle: 3)
    +below($phablet)
      col(1/1, cycle: 1)
  .quarter
    col(1/4, cycle: 4)
    +below($tablet)
      col(1/2, cycle: 2)
    +below($phablet)
      col(1/1, cycle: 1)
  .fifths
    col(1/5, cycle: 5)
    +below($phablet)
      col(1/1, cycle: 1)
  .sixths
    col(1/6, cycle: 6)
    +below($tablet)
      col(1/3, cycle: 3)
    +below($phablet)
      col(1/1, cycle: 1)
