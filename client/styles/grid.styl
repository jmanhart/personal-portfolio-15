@import 'rupture'
@import 'nib'
@import 'jeet'
@import '/vars.styl'

//Actual Working Grid
.grid
  cf()
  padding: 1% 0% 1% 0%
  .column
    width: 100%
    height: 100%
    +below($tablet)
      padding-bottom: 3%
  .single
    col(1/1, cycle: 1)
  .halfs
    col(1/2, cycle: 2)
    +below($phablet)
      col(1/1)
  .thirds
    col(1/3, cycle: 3)
    +below($phablet)
      col(1/1, cycle: 1)
  .quarter
    col(1/4, cycle: 4)
    +below($tablet)
      col(1/2, cycle: 2)
    +below($phablet)
      col(1/1, cycle: 1)
  .fifths
    col(1/5, cycle: 5)
    +below($phablet)
      col(1/1, cycle: 1)
  .sixths
    col(1/6, cycle: 6)
    +below($tablet)
      col(1/3, cycle: 3)
    +below($phablet)
      col(1/1, cycle: 1)
