@import 'rupture'
@import 'nib'
@import 'jeet'
@import '/styles/vars.styl'
@import '/styles/grid.styl'

edit()

*
  margin 0

html
  height: 100%
  width: 100%
  margin:0;

body
  min-height: 100%

.wrapper-main //Basic Wrapper
  width: 100%
  height: 100%
  padding-top: 8%
  display: flex
  justify-content: center
  +below($desktop)
    padding-top: 15%

.wrapper //Basic Wrapper
  width: 100%
  height: 100%
  display: flex
  justify-content: center

.container //Basic Container
  width: 900px
  height: 100%
  +below($desktop)
    padding: 0% 14% 0% 14%

header
  width 100%
  height auto
  overflow hidden
  position fixed
  top 0
  left 0
  z-index 1002

//////////////////////////////////////////
//GlobalStyles
////Type, Rules, Buttons, Links, Bars

h1 //Headline Sans-Serif
  font-family: 'Lato', sans-serif
  font-weight: 900
  font-size: 250%
  line-height: 150%
  color: $black
  text-align: left

h2 //Headline Serif
  font-family: 'Vollkorn', serif
  font-weight: 400
  font-size: 250%
  line-height: 150%
  color: $black
  text-align: left

h3 //Sub-Head Sans-Serif
  font-family:'Lato', sans-serif
  font-weight: 900
  font-size: 150%
  line-height: 125%
  color: $black
  text-align: left

h4 //Sub-Head Serif
  font-family: 'Vollkorn', serif
  font-weight: 400
  font-size: 150%
  line-height: 125%
  color: $black
  text-align: left



p //Body Copy 01 Style
  font-family 'Vollkorn', serif
  font-weight: 400
  font-size: 125%
  line-height: 150%
  color: $black
  text-align: left

hr //Rule
  text-align center
  border-top-color: rgba(0,0,0,0.1);

a //No Text-decoration ever
  text-decoration: none



.dev-content-wrapper
  width 960px
  margin 0 auto
  padding-bottom 1%
  border-radius: 4px;
  +below(960px)
    width 85%

.main-content
  text-align center

//Button Styles
button, .view-more //Used for View more
  width: 200px
  height: 40px
  border: 4px solid $black
  display: flex
  justify-content: center
  align-items: center
  -webkit-transition: all 0.2s ease-out
  -moz-transition: all 0.2s ease-out
  -ms-transition: all 0.2s ease-out
  -o-transition: all 0.2s ease-out
  transition: all 0.2s ease-out
  &:hover
    width: 220px
    background-color: $offwhite

// Grid Work for HOME and DESIGN & DEV
.Home
  cf()
  .HomeWrapper
      col(1/2, gutter: 2, cycle: 2)
      height 100px
      box-sizing border-box
      box-shadow: 0px 1px 1px 0px #dfdfdf;
      background-color #ffffff
      border-radius: 4px;
      overflow: hidden;
      // border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      +below(768px)
          col(1/1, gutter: .5, cycle: 2)

      .HomeBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        p
          color black
          font-family helvetica
          text-align center
          text-decoration none

  .HomeWrapper:hover
      background grey
      border 0px solid rgba(0, 0, 0, 0.2)
      p
        color white


#icon
  width 18%
  padding-left 30px
  margin-bottom -30px


.Dev
  box-shadow: 0px 1px 1px 0px #dfdfdf;
  background-color #ffffff
  cf()
  .DevWrapperLeft
      col(1/2, gutter: 2, cycle: 2)
      height 100%
      box-sizing border-box
      // box-shadow: 0px 1px 1px 0px #dfdfdf;
      // background-color #ffffff
      border-radius: 4px;
      overflow: hidden;
      position relative
      padding 4%
      +below(768px)
          col(1/1, gutter: .5, cycle: 2)
      .HomeBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        p
          color black
          font-family helvetica
          text-align center
          text-decoration none
  .DevWrapperRight
      col(1/2, gutter: 2, cycle: 2)
      height 322px
      box-sizing border-box
      box-shadow: 0px 1px 1px 0px #dfdfdf;
      border-radius: 4px;
      overflow: hidden;
      position relative
      background-color grey
      +below(768px)
          col(1/1, gutter: .5, cycle: 2)
      .DevBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        p
          color black
          font-family helvetica
          text-align center
          text-decoration none

//Bars
.top, .bottom, .left, .right {
  background-color: #000000;
  position: fixed;
  z-index 999
  }
  .left, .right {
    top: 0; bottom: 0;
    width: 15px;
    }
    .left {
      left: 0;
    }
    .right {
      right: 0;
    }

  .top, .bottom {
    left: 0; right: 0;
    height: 15px;
    }
    .top {
      top: 0;
    }
    .bottom {
      bottom: 0;
      }

.top, .bottom, .left, .right
  +below(600px)
    visibility hidden



//////////////////////////////////////////

.wrapper-hero
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  background-color: $green
  .hero
    height: 300px
    background-color: $white






//////////////////////////
// Old Footer Styles
.FooterWrapper
  background-color #000000
  height 100%
  width 100%
  bottom: 0

.FooterContent
  cf()
  width 90%
  height 100px
  max-width 1200px
  display flex
  background-color #000000
  justify-content center
  padding-right 5%
  padding-left 5%
  +below(600px)
    flex-wrap wrap
    width 95%
  .FooterLeft
    col(1/2, gutter: 2, cycle: 2)
    width 75%
    display flex
    align-items center
    justify-content flex-start
    +below(600px)
      width 100%
    h3
      text-align left
      color white
      letter-spacing 1.25px
      font-size 20px
      +below(600px)
        justify-content fle
  .FooterRight
    col(1/2, gutter: 2, cycle: 2)
    width 25%
    display flex
    align-items center
    flex-direction row
    justify-content flex-end
    +below(600px)
      width 100%
    h2
      color white
      width 100%
      display flex
      justify-content space-between
      padding-bottom 0%
      +below(600px)
        justify-content flex-start
        i
          padding-right 25px
    a
      color white


////////////////////////////////////////////////////
// Blog STYLES

.blog-posts
  width 100%
  .post
    width 75%
    height  100%
    margin 0 auto
    padding 3% 3% 6% 3%
    box-sizing border-box
    img
      max-width 100%
      height auto
    +below(768px)
      width 100%


.post-wrapper
  padding 20px 0px 20px 0px
  height 100%



.post-info-wrapper
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

.date
  color black
  font-family helvetica
  font-size 14px


.tag-wrapper
  height 100%
  width 70%
  text-align right
  line-height 28px


.tags
  font-size 14px
  color black
  font-family helvetica
  padding 1% 1% 1% 2%
  text-align right
  box-shadow: 0px 1px 1px 0px #dfdfdf;
  background-color #ffffff
  border-radius 6px
  margin-left 1%
