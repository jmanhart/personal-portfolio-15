@import 'rupture'
@import 'nib'
@import 'jeet'
@import '/styles/vars.styl'

edit()

*
  margin 0

html
  height: 100%
  width: 100%
  margin:0;

body
  min-height: 100%

h1 //Headline Sans-Serif
  font-family: 'Lato', sans-serif
  font-weight: 900
  font-size: 250%
  line-height: 150%
  color: $black
  text-align: left

h2 //Headline Serif
  font-family: 'Vollkorn', serif
  font-weight: 400
  font-size: 250%
  line-height: 150%
  color: $black
  text-align: left

h3 //Sub-Head Sans-Serif
  font-family:'Lato', sans-serif
  font-weight: 900
  font-size: 150%
  line-height: 125%
  color: $black
  text-align: left

h4 //Sub-Head Serif
  font-family: 'Vollkorn', serif
  font-weight: 400
  font-size: 150%
  line-height: 125%
  color: $black
  text-align: left


h5
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 125%
  line-height: 100%
  color: $black
  text-align: left

h6
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 125%
  line-height: 100%
  color: $black
  text-align: left

p
  font-family 'Vollkorn', serif
  font-weight: 400
  font-size: 125%
  line-height: 150%
  color: $black
  text-align: left

hr
  text-align center
  border-top-color: rgba(0,0,0,0.1);

a
  text-decoration: none

button
  width: 200px
  height: 40px
  border: 4px solid $black
  display: flex
  justify-content: center
  align-items: center
  -webkit-transition: all 0.2s ease-out
  -moz-transition: all 0.2s ease-out
  -ms-transition: all 0.2s ease-out
  -o-transition: all 0.2s ease-out
  transition: all 0.2s ease-out
  &:hover
    width: 220px
    background-color: $offwhite


.wrapper
  width: 100%
  height: 100%
  display: flex
  justify-content: center

.container
  width: 960px
  height: 100%
  +below($desktop)
    padding: 0% 4% 0% 4%

.wrapper-hero
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  background-color: $green
  .hero
    height: 300px
    background-color: $white


.grid
  cf()
  padding: 1% 0% 1% 0%
  .column-single
    col(1/1, cycle: 1)
    height: 100px
    background-color: $gray
  .column-halfs
    col(1/2, cycle: 2)
    height: 100px
    background-color:$gray
    +below($phablet)
      col(1/1)
  .column-thirds
    col(1/3, cycle: 3)
    height: 100px
    background-color: $gray
    +below($phablet)
      col(1/1, cycle: 1)
  .column-quarter
    col(1/4, cycle: 4)
    height: 100px
    background-color: $gray
    +below($tablet)
      col(1/2, cycle: 2)
    +below($phablet)
      col(1/1, cycle: 1)
  .column-fifths
    col(1/5, cycle: 5)
    height: 100px
    background-color: $gray
    +below($phablet)
      col(1/1, cycle: 1)
  .column-sixths
    col(1/6, cycle: 6)
    height: 100px
    background-color: $gray
    +below($tablet)
      col(1/3, cycle: 3)
    +below($phablet)
      col(1/1, cycle: 1)











header
  width 100%
  height auto
  overflow hidden
  position fixed
  top 0
  left 0
  z-index 1002
  //box-shadow 0 2px 20px rgba(0,0,0,0.125)
  //background #fa6347
  -webkit-transition height 0.3s
  -moz-transition height 0.3s
  -ms-transition height 0.3s
  -o-transition height 0.3s
  transition height 0.3s
  // +below(768px)
  //   background rgba(255,255,255,.95)

.Nav
  list-style none
  margin 0 auto
  width 90%
  padding 4%
  //max-height 100px
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  align-items center
  -webkit-flex-flow wrap
  justify-content space-between
  // +below(768px)
  //   h1, p
  //     color #ffffff
  li
    padding 17px 0px 0px 30px
  a
    text-decoration none
    display block
    //padding 1em
    //color white

.Nav li:first-child
  padding 2%
  width 80px
  height 45px
  display flex
  justify-content center
  align-items center
  background-color #000000
  -webkit-transition all 0.2s ease-out
  -moz-transition all 0.2s ease-out
  -ms-transition all 0.2s ease-out
  -o-transition all 0.2s ease-out
  transition all 0.2s ease-out
  h3
    color $white
    font-size: 30px





#MovingNav
  width 75%
  display flex
  justify-content flex-start
  margin 0 auto
  #MovingList
    padding-top 25px
    li
      padding 10px 0px 0px 7px


////////////////////////////////////////////////////
//BARS


.top, .bottom, .left, .right {
  background-color: #000000;
  position: fixed;
  z-index 999
  }
  .left, .right {
    top: 0; bottom: 0;
    width: 15px;
    }
    .left {
      left: 0;
    }
    .right {
      right: 0;
    }

  .top, .bottom {
    left: 0; right: 0;
    height: 15px;
    }
    .top {
      top: 0;
    }
    .bottom {
      bottom: 0;
      }

.top, .bottom, .left, .right
  +below(600px)
    visibility hidden


//////////////////////////
// Old Footer Styles
.FooterWrapper
  background-color #000000
  height 100%
  width 100%

.FooterContent
  cf()
  width 90%
  height 100px
  max-width 1200px
  display flex
  background-color #000000
  justify-content center
  padding-right 5%
  padding-left 5%
  +below(600px)
    flex-wrap wrap
    width 95%
  .FooterLeft
    col(1/2, gutter: 2, cycle: 2)
    width 75%
    display flex
    align-items center
    justify-content flex-start
    +below(600px)
      width 100%
    h3
      text-align left
      color white
      letter-spacing 1.25px
      font-size 20px
      +below(600px)
        justify-content fle
  .FooterRight
    col(1/2, gutter: 2, cycle: 2)
    width 25%
    display flex
    align-items center
    flex-direction row
    justify-content flex-end
    +below(600px)
      width 100%
    h2
      color white
      width 100%
      display flex
      justify-content space-between
      padding-bottom 0%
      +below(600px)
        justify-content flex-start
        i
          padding-right 25px
    a
      color white

