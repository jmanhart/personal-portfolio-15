 edit()
*
  margin 0

html
  height: 100%
  width: 100%
  margin:0;

body
  min-height: 100%


h1
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 49px
  color black
  text-align center
  +below(400px)
    font-size 36px
    text-align center

h2
  padding-bottom 3%
  font-family 'Vollkorn', serif
  font-weight 400
  font-size 26px
  color black
  text-align center
  padding-bottom 2%
  +below(400px)
    font-size 21px

h3
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 30px
  color black
  text-align center
  +below(400px)
    text-align center

h4
  font-family 'Vollkorn', serif
  font-weight 400
  font-style italic
  font-size 18px
  line-height 20px
  color black
  text-align center
  padding 1%
  padding-bottom  5px

h5
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 16px
  color black
  text-align left
  padding-bottom 3px
  text-decoration none

h6
  font-family 'Lato', sans-serif
  font-weight 900
  font-size 40px
  line-height 50px
  color black
  text-align center
  padding 1%
  padding-bottom 3px
  +below(400px)
    text-align center

p
  font-family 'Vollkorn', serif
  font-weight 400
  font-size 18px
  line-height 34px
  color black
  text-align left
  max-width 400px
  min-width 100px
  letter-spacing 0.15px

hr
  text-align center
  //margin 2em auto
  // max-width: 5em;
  border-top-color: rgba(0,0,0,0.1);

a
  text-decoration none


.Hundred
  width 100%
  height 100%

////////////////////////////////////////////////////
// NAV START

header
  width 100%
  height auto
  overflow hidden
  position fixed
  top 0
  left 0
  z-index 1002
  //box-shadow 0 2px 20px rgba(0,0,0,0.125)
  //background #fa6347
  -webkit-transition height 0.3s
  -moz-transition height 0.3s
  -ms-transition height 0.3s
  -o-transition height 0.3s
  transition height 0.3s
  // +below(768px)
  //   background rgba(255,255,255,.95)

.Nav
  list-style none
  margin 0 auto
  width 90%
  padding 4%
  //max-height 100px
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  align-items center
  -webkit-flex-flow wrap
  justify-content space-between
  // +below(768px)
  //   h1, p
  //     color #ffffff
  li
    padding 17px 0px 0px 30px
  a
    text-decoration none
    display block
    //padding 1em
    //color white

.Nav li:first-child
  padding 2%
  width 80px
  height 45px
  display flex
  justify-content center
  align-items center
  background-color #000000
  -webkit-transition all 0.2s ease-out
  -moz-transition all 0.2s ease-out
  -ms-transition all 0.2s ease-out
  -o-transition all 0.2s ease-out
  transition all 0.2s ease-out
  h3
    color $white
    font-size: 30px





#MovingNav
  width 75%
  display flex
  justify-content flex-start
  margin 0 auto
  #MovingList
    padding-top 25px
    li
      padding 10px 0px 0px 7px


