// NAV START

header
  width 100%
  height 100px
  overflow hidden
  position fixed
  top 0
  left 0
  z-index 1
  //box-shadow 0 2px 20px rgba(0,0,0,0.125)
  //background #fa6347
  -webkit-transition height 0.3s
  -moz-transition height 0.3s
  -ms-transition height 0.3s
  -o-transition height 0.3s
  transition height 0.3s
  +below(768px)
    background rgba(255,255,255,.95)

.Nav
  list-style none
  margin 0 
  width 100%
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  align-items center
  -webkit-flex-flow wrap
  // +below(768px)
  //   h1, p
  //     color #ffffff
  
.Nav li:first-child
  margin-right auto
  padding 10px 0px 0px 30px

.Nav li:last-child 
  padding-right 50px

.Nav a
  text-decoration none
  display block
  padding 1em
  color white
  
