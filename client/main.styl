@import 'nib'
@import 'rupture'
@import 'fonts'
@import 'templates/**/*.import.styl'
@import url(https://fonts.googleapis.com/css?family=Montserrat:400,700);
@import url(https://fonts.googleapis.com/css?family=Domine:400,700);

body
  color #eee
  background #ffffff

button
  background #eee
  padding 10px 20px

li
  display inline
  padding 15px 25px 15px 25px
  margin 0 auto
  text-align center
  text-transform uppercase
  font-family 'Montserrat', sans-serif
  text-decoration none

a
  text-decoration none

.header
  width 100%
  margin 0 auto

.wrapper
  height 100%

.content-wrapper
  height 100%
  width 600px
  margin 0 auto
  border 1px solid rgba(0, 0, 0, 0.2)

#img
  height 500px
  background-color gray

.footer
  width 600px
  margin 0 auto

#footer
  text-align center
  padding 15px

#nav-header
  text-align center
  padding 15px
