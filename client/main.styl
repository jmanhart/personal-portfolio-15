// Sub Navagation within the blog and work
.SubNav
  cf()
  .BtnWrapper
      col(1/1, gutter: .5, cycle: 2)
      height 50px
      box-sizing border-box
      border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      +below(768px)
        col(1/1, gutter: .5, cycle: 2)
        
      .Btn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
    
        p
          color black
          text-transform uppercase
          font-family helvetica
          text-align center


  .BtnWrapper:hover
    background green
    border 0px solid rgba(0, 0, 0, 0.2)
    p
      color white


// Grid Work for HOME and DESIGN & DEV
.Home
  cf()
  .HomeWrapper
      col(1/2, gutter: 2, cycle: 2)
      height 100px
      box-sizing border-box
      box-shadow: 0px 1px 1px 0px #dfdfdf;
      background-color #ffffff
      border-radius: 4px;
      overflow: hidden;
      // border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      +below(768px)
          col(1/1, gutter: .5, cycle: 2)
      
      .HomeBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        p
          color black
          font-family helvetica
          text-align center
          text-decoration none

  .HomeWrapper:hover
      background grey
      border 0px solid rgba(0, 0, 0, 0.2)
      p
        color white



  


      












