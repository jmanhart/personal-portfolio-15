//Home STYLES

.IntroWrapper
  height 500px
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap wrap
  flex-direction column

.IntroImage
  width 45%
  margin 0 auto

#IntroImageScreenClip
  clip-path circle(40% at 50% 50%);
  display flex
  justify-content center


.IntroText
  text-decoration none
  color #222
  &:hover
    text-decoration underline
    color grey


