// edit()
*
  margin 0

html body
  color #eee
  background #ffffff
  height 100%
  zoom 95%

a
  text-decoration none


.wrapper
  height 1200px
  padding-top 200px
  padding-bottom 200px
  margin 0 auto -4em

.content-wrapper
  width 960px
  margin 0 auto
  +below(960px)
    width 85%

.nav-wrapper
  height 50px
  width 960px
  margin 0 auto
  padding-bottom 15px


// Sub Navagation within the blog and work
.SubNav
  cf()
  .BtnWrapper
      col(1/1, gutter: .5, cycle: 2)
      height 50px
      box-sizing border-box
      border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      +below(768px)
        col(1/1, gutter: .5, cycle: 2)
        
      .Btn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
    
        p
          color black
          text-transform uppercase
          font-family helvetica
          text-align center


  .BtnWrapper:hover
    background green
    border 0px solid rgba(0, 0, 0, 0.2)
    p
      color white


// Grid Work for HOME and DESIGN & DEV
.Home
  cf()
  .HomeWrapper
      col(1/2, gutter: 2, cycle: 2)
      height 300px
      box-sizing border-box
      border 1px solid rgba(0, 0, 0, 0.2)
      position relative
      +below(768px)
          col(1/1, gutter: .5, cycle: 2)
      
      .HomeBtn
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        p
          color black
          font-family helvetica
          text-align center
          text-decoration none

  .HomeWrapper:hover
      background grey
      border 0px solid rgba(0, 0, 0, 0.2)
      p
        color white
        













